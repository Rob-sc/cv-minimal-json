const {name, label, email, image, location, profiles} = basics

const perfiles = profiles.map(p => p.network);

---

<Section title="Hero">
        <div class="container">
            <p>{name}<br>
                {label}<br>
                {email}<br>
                {perfiles.join(' ')}
                {location.city}, {location.region}</p>
