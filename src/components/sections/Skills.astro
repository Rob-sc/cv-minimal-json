---
import Section from "@/components/section.astro"
import {skills} from "@cv/db_es.json"

const hardskills = skills.hard.map(s => s);
const softskills = skills.soft.map(s => s);
---

<Section title="Habilidades">
    
        <h3>Hardskills</h3>
            <ul>
                {hardskills.map((s)=>
                    <li class="dark">{s}</li>
                )
                }
            </ul>

        <h3>Softskills</h3>
            <ul>
                {softskills.map((s)=>
                    <li>{s}</li>
                )
                }
            </ul>


</Section>

<style>
    ul {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin: 1rem 0;
    }

    ul li{
        background-color: rgba(214, 214, 214, 0.781);
        list-style: none;
        margin: 0px 5px;
        padding: 3px;
        border-radius: 5px;
        font-size: 12px;
        font-weight: 600;
    }

    ul li.dark{
        background-color: #666;
        list-style: none;
        color: #fff;
        margin: 0px 5px;
        padding: 3px;
        border-radius: 5px;
        font-size: 12px;
        font-weight: 600;
    }

</style>