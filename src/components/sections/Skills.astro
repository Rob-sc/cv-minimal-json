---
import Section from "@/components/section.astro"
import {skills} from "@cv/db_es.json"

const perfiles = skills.map(s => s.name);

---

<Section title="Skills">
    
        <h3>Hardskills</h3>
            <ul>
                {skills.map((s)=>
                    <li class="dark">{s.name}</li>
                )
                }
            </ul>

        <h3>Softskills</h3>
            <ul>
                {skills.map((s)=>
                    <li>{s.name}</li>
                )
                }
            </ul>


</Section>

<style>
    ul {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin: 1rem 0;
    }

    ul li{
        background-color: rgba(214, 214, 214, 0.781);
        list-style: none;
        margin: 0px 5px;
        padding: 3px;
        border-radius: 5px;
        font-size: 12px;
        font-weight: 600;
    }

    ul li.dark{
        background-color: #666;
        list-style: none;
        color: #fff;
        margin: 0px 5px;
        padding: 3px;
        border-radius: 5px;
        font-size: 12px;
        font-weight: 600;
    }

</style>